# --- Twilio (REQUIRED) ---
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1XXXXXXXXXX
TWILIO_TO=+1YYYYYYYYYY

# --- App Settings ---
POLL_SECONDS=600           # polling base interval (in seconds)
JITTER_SECONDS=30          # random jitter added/subtracted to each cycle
TIMEZONE=America/Denver    # used for "morning" cutoff and date math

